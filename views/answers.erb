<div class="row">
	<div class="col-sm-4">
		<h1>Find the answers</h1>
		<form role="search" action="/answers" method="post">
			<div class="form-group">
				<input type="text" required class="form-control" placeholder="Type your question here" name="question">
				<input type="number" class="form-control" name="num_entries" min="1" max="5">
			</div>
			<button type="submit" class='btn btn-success'>Find Answers</button>
			<!--  <button type="submit" class="progress-button" data-style="fill" data-horizontal>Submit</button> -->
        </form>
  </div>
  <div class="col-sm-8 ">
  	<h1>Responses to:</h1>
  	<h3><%= params[:message] %></h3>
  	<% if @array %>
  		<ul class="list-group">
		<% @array.each do |k,v,r| %>
			<li class="list-group-item">
				<h3>Relevance: <span class="badge"><%= r.round(2) %></span></h3>
				<h3>Collection Score: <span class="badge"><%= v.round(2) %></span></h3>
				<div class="well">
					<%= k %>
				</div>
				
			</li>
		<% end %>
		</ul>
	<% end %>
  </div>
</div>