<div class="row">
	<div class="col-sm-4">
		<h1>Find the answers</h1>
		<form role="search" action="/answers" method="post">
			<div class="form-group">
				<input type="text" required class="form-control" placeholder="Type your question here" name="question">
				<input type="number" class="form-control" name="num_entries" min="1" max="5">
			</div>
			<button type="submit" class='btn btn-success'>Find Answers</button>
			<!--  <button type="submit" class="progress-button" data-style="fill" data-horizontal>Submit</button> -->
        </form>
  </div>
  <div class="col-sm-8 ">
  	<h1>Responses to:</h1>
  	<h3><%= params[:message] %></h3>
  	<% if @array %>
  		<ul class="list-group">
		<% @array.each do |answer,v,r, tags, keywords| %>
			<li class="list-group-item">
				<div class="media">
  					<a class="media-left" href="#">
    					<!--<img class="media-object" data-src="..." alt="Generic placeholder image">-->
    					<h4>Relevance: <span class="badge"><%= r.round(2) %></span></h4>
    					<h4>Collection Score: <span class="badge"><%= v.round(2) %></span></h4>
  					</a>
  					<div class="media-body">
    					<h4 class="media-heading">Response Text:</h4>
    						<%= answer %>
    						<div class="panel panel-default">
  								<!-- Default panel contents -->
  								<div class="panel-heading">Key Words</div>
  								<!-- Table -->
  								<table class="table">
  									<thead>
  										<tr>
        									<th>Keyword</th>
        									<th>Score</th>
      									</tr>
  									</thead>
  									<tbody>
  										<% keywords.each do |word,score| %>
  											<tr>
  												<td>
  													<em><%= word %></em>
  												</td>
  												<td>
  													<p><%= score %></p>
  												</td>
  											</tr>
    									<% end %>
  									</tbody>
  								</table>
							</div>
  					</div>
				</div>

			</li>
		<% end %>
		</ul>
	<% end %>
  </div>
</div>