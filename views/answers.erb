<div class="row">
	<div class="col-sm-4">
		<h1>Find the answers</h1>
		<form role="search" action="/answers" method="post">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Type your question here" name="question">
			</div>
			<button type="submit" class="btn btn-default">Find Answers</button>
        </form>
  </div>
  <div class="col-sm-8">
  	<h1>Responses</h1>
  	<% if @array %>
  		<ul class="list-group">
		<% @array.each do |k,v| %>
			<li class="list-group-item"><span class="badge"><%= v.round(2) %></span><%= k %></li>
		<% end %>
		</ul>
	<% end %>
  </div>
</div>