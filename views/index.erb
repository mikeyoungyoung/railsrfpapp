 <div class="row">
	<div class="col-sm-4">
		<h1>Add new questions and responses below!</h1>
		<form role="search" action="/" method="post">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="New Question" name="question">
				<textarea class="form-control" rows="5" name="response" placeholder="Enter text response here"></textarea>
			</div>
			<button type="submit" class="btn btn-default">Add new Question</button>
        </form>
  </div>
  <div class="col-sm-8">
  	<h1>Responses</h1>
  	<% if @array %>
		<% @array.each do |k,v| %>
			<h1><%= k %></h1>
			<div class="well">
				<p><%= v %></p>
			</div>
		<% end %>
	<% end %>
  </div>
</div>